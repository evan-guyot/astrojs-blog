---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import BlogLink from "../../components/BlogLink.astro";

export async function getStaticPaths() {
    const allPosts : any[] = await getCollection("blog");
    const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

    return uniqueTags.map((tag) => {
        const filteredPosts = allPosts.filter((post) =>
            post.data.tags.includes(tag)
        );
        
        return {
            params: { tag },
            props: { posts: filteredPosts },
        };
    });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout pageTitle={`Posts with tag : ${tag}`}>
    <ul class="grid gap-6 w-full justify-items-center my-12">
        { posts.map((post) => <BlogLink url={`/posts/${post.id}/`} title={post.data.title} />) }
    </ul>
</BaseLayout>